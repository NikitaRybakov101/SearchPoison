<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- styles.xml -->
    <style name="TextHeaderStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="TextDescriptionStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="TextNameAppSplashScreenStyle">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="CardItemStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">#EDEDED</item>
        <item name="strokeWidth">2.5dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

</resources>
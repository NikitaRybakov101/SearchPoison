<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItems"
    style="@style/CardItemStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_very_small"
    android:layout_marginTop="@dimen/margin_very_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageItems"
            style="@style/ImageItemsStyle"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:src="@drawable/placeholder_not_found"
            app:shapeAppearanceOverlay="@style/RoundedSquare" />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small"
            android:textAppearance="@style/TextHeaderStyle"/>

        <TextView
            android:id="@+id/descriptionItems"
            style="@style/TextDescriptionStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_very_small"
            android:layout_marginVertical="@dimen/margin_default" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

